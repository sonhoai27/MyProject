<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.it.sonh.bai1.BaiTap2Lab3tt">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_above="@id/layout2"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentLeft="true"
            android:background="#00ff11"
            android:id="@+id/edit1"
            android:text="4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="#00ff11"
            android:id="@+id/edit2"
            android:text="5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button
            android:layout_alignParentRight="true"
            android:background="#00ff11"
            android:id="@+id/edit3"
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/edit7"
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:background="#00ff11"
            android:id="@+id/edit4"
            android:text="4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button
            android:layout_marginRight="5dp"
            android:background="#00ff11"
            android:layout_toEndOf="@id/edit4"
            android:id="@+id/edit5"
            android:text="5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/edit4" />
        <Button
            android:background="#00ff11"
            android:layout_toEndOf="@id/edit5"
            android:id="@+id/edit6"
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/edit5" />
    </RelativeLayout>
    <Button
        android:background="#0008ff"
        android:id="@+id/edit7"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/edit"
        android:text="SEVEN"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button
        android:background="#00fff2"
        android:text="EIGHT"
        android:layout_alignParentBottom="true"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
